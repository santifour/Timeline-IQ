<Window x:Class="ProjectTimeEstimator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTimeEstimator.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="850" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Modern Dark Theme Styles -->
        
        <!-- TextBlock Label Style -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4FC3F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- DatePickerTextBox Style -->
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>
        
        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#4FC3F7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3F3F46"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4FC3F7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0288D1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Accent Button Style -->
        <Style TargetType="Button" x:Key="AccentButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4FC3F7"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#29B6F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style TargetType="Button" x:Key="DeleteButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3F3F46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4FC3F7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row Style -->
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#3F3F46" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#252526" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="⚡" FontSize="16" Foreground="#4FC3F7" Margin="0,0,8,0"/>
                        <TextBlock Text="Timeline IQ" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="─" Width="45" Height="40" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0"
                                FontSize="16"
                                Click="MinimizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3F3F46"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="☐" Width="45" Height="40" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0"
                                FontSize="16"
                                Click="MaximizeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3F3F46"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="✕" Width="45" Height="40" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0"
                                FontSize="16"
                                Click="CloseButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E81123"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*" MinWidth="380"/>
                </Grid.ColumnDefinitions>

                <!-- Dashboard Cards -->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Projects Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="TOTAL PROJECTS" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalProjectsCount}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Accuracy Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="ACCURACY SCORE" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding AverageAccuracy, StringFormat=N1}" FontSize="32" FontWeight="Bold" Foreground="#4FC3F7"/>
                                <TextBlock Text="/100" FontSize="16" Foreground="#B0B0B0" Margin="4,0,0,4" VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Deviation Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="AVG DEVIATION" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding AverageDeviation, StringFormat={}{0:N1}%}" FontSize="32" FontWeight="Bold" Foreground="#FF5252"/>
                        </StackPanel>
                    </Border>

                    <!-- Under/Over Card -->
                    <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="UNDER / OVER" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding UnderestimatedCount}" FontSize="28" FontWeight="Bold" Foreground="#FF9800"/>
                                <TextBlock Text=" / " FontSize="28" FontWeight="Bold" Foreground="#B0B0B0"/>
                                <TextBlock Text="{Binding OverestimatedCount}" FontSize="28" FontWeight="Bold" Foreground="#9C27B0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Export Card -->
                    <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                        <StackPanel VerticalAlignment="Center">
                            <Button Content="Export CSV" Command="{Binding ExportCommand}" Height="32" Background="#3F3F46" Margin="0,0,0,8"/>
                            <Button Content="Monthly Report" Command="{Binding MonthlyReportCommand}" Height="32" Background="#7C4DFF"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Left Panel: Projects List -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Bar -->
                    <Border Grid.Row="0" Background="#252526" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="📋 Projects" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Filter:" VerticalAlignment="Center" Foreground="#B0B0B0" Margin="0,0,8,0"/>
                                <ComboBox ItemsSource="{Binding FilterOptions}" SelectedItem="{Binding FilterStatus}" Width="140"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding FilteredProjects}" 
                              SelectedItem="{Binding SelectedProject}"
                              IsReadOnly="True"
                              RowHeight="40">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="PROJECT NAME" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="EST." Binding="{Binding EstimatedHours}" Width="70"/>
                            <DataGridTextColumn Header="ACT." Binding="{Binding ActualHours}" Width="70"/>
                            <DataGridTextColumn Header="DEV %" Binding="{Binding PercentageDeviation, StringFormat=N0}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Analysis Panel -->
                    <Border Grid.Row="2" Background="#252526" CornerRadius="6" Padding="15" Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock Text="📊 ESTIMATION BIAS ANALYSIS" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding BiasAnalysisDetails}" FontSize="12" FontFamily="Consolas" Foreground="#B0B0B0" TextWrapping="Wrap" LineHeight="18"/>
                            <Border Margin="0,10,0,0" Background="#3F3F46" CornerRadius="4" Padding="10">
                                <TextBlock Text="{Binding BiasAnalysisText}" FontSize="13" FontWeight="SemiBold" Foreground="#4FC3F7"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Right Panel: Form & Chart -->
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Panel -->
                    <Border Grid.Row="0" Background="#252526" CornerRadius="8" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Header -->
                                <Grid Margin="0,0,0,20">
                                    <TextBlock Text="✏️ Project Details" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    <Button Content="Clear" Command="{Binding ClearFormCommand}" HorizontalAlignment="Right" Padding="12,6" Background="#3F3F46"/>
                                </Grid>

                                <!-- Form Fields -->
                                <TextBlock Text="Project Name" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="70" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Estimated Hours" Style="{StaticResource LabelStyle}"/>
                                        <TextBox Text="{Binding EstimatedHours, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Actual Hours" Style="{StaticResource LabelStyle}"/>
                                        <TextBox Text="{Binding ActualHours, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Prediction -->
                                <Border Background="#3F3F46" CornerRadius="4" Padding="10" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding PredictionText}" Foreground="#4FC3F7" FontStyle="Italic" FontSize="12"/>
                                </Border>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Start Date" Style="{StaticResource LabelStyle}"/>
                                        <DatePicker SelectedDate="{Binding StartDate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="End Date" Style="{StaticResource LabelStyle}"/>
                                        <DatePicker SelectedDate="{Binding EndDate}"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding Status}"/>

                                <!-- Action Buttons -->
                                <Button Content="💾 Save / Add Project" Command="{Binding AddProjectCommand}" Margin="0,20,0,8" Height="40" Style="{StaticResource AccentButton}"/>
                                
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="Update" Command="{Binding UpdateProjectCommand}" Height="36"/>
                                    <Button Grid.Column="2" Content="Delete" Command="{Binding DeleteProjectCommand}" Height="36" Style="{StaticResource DeleteButton}"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Chart Panel -->
                    <Border Grid.Row="1" Background="#252526" CornerRadius="8" Padding="15" Margin="0,12,0,0">
                        <StackPanel>
                            <TextBlock Text="📈 Recent Performance" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                            <ItemsControl ItemsSource="{Binding ChartData}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Label}" FontSize="11" Foreground="#B0B0B0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="E:" FontSize="10" Foreground="#B0B0B0"/>
                                                <TextBlock Text="{Binding Value1}" FontSize="10" FontWeight="Bold" Foreground="White" Margin="2,0,8,0"/>
                                                <TextBlock Text="A:" FontSize="10" Foreground="#B0B0B0"/>
                                                <TextBlock Text="{Binding Value2}" FontSize="10" FontWeight="Bold" Foreground="White" Margin="2,0,8,0"/>
                                                <Border Width="12" Height="12" CornerRadius="2" Margin="4,0,0,0" x:Name="StatusIndicator"/>
                                            </StackPanel>
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsOverestimated}" Value="True">
                                                <Setter TargetName="StatusIndicator" Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsOverestimated}" Value="False">
                                                <Setter TargetName="StatusIndicator" Property="Background" Value="#FF5252"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
